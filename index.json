der-top-color: #383838;\n    animation: spin 1s ease-in-out infinite;\n    -webkit-animation: spin 1s ease-in-out infinite;\n  }\n  \n   \n   \n  .embed-pdf-center-viewport {\n    min-height: 100vh;\n    display: flex;\n    justify-content: center;\n    align-items: center;\n  }\n  \n  \n  \n  #overlayText {\n    position: absolute;\n    top: -20px;\n    left: 80%;\n    transform: translateX(-50%);\n    word-wrap: break-word;\n    display: flex;\n    justify-content: center;\n    z-index: 5;\n    pointer-events: none;\n  }\n  #overlayText a {\n    pointer-events: auto;\n    color: #000;\n    margin: 0;\n    background-color: #eeeeee;\n    padding: 0.3em 1em;\n    border: solid 2px;\n    border-radius: 12px;\n    border-color: #00000030;\n    text-decoration: none;\n    box-shadow: 0 2px 4px rgba(0,0,0,.15);\n    transition: background-color .15s ease, box-shadow .15s ease;\n  }\n  #overlayText a:hover, #overlayText a:focus { background:#f5f5f5; box-shadow:0 3px 6px rgba(0,0,0,.25); }\n  \n  #overlayText svg {\n    height: clamp(1em, 2vw, 1.4em);\n    width:  clamp(1em, 2vw, 1.4em);\n  }\n  \n  \n  \n  @keyframes spin {\n    to { -webkit-transform: rotate(360deg); }\n  }\n  @-webkit-keyframes spin {\n    to { -webkit-transform: rotate(360deg); }\n  }\n  \u003c/style\u003e\u003cdiv class=\"embed-pdf-container \" id=\"embed-pdf-container-28d83034\"\u003e\n  \u003cdiv class=\"pdf-loadingWrapper\" id=\"pdf-loadingWrapper-28d83034\"\u003e\n    \u003cdiv class=\"pdf-loading\" id=\"pdf-loading-28d83034\"\u003e\u003c/div\u003e\n  \u003c/div\u003e\n  \u003cdiv class=\"pdf-frame\" id=\"pdf-frame-28d83034\"\u003e\n    \u003cdiv id=\"overlayText\"\u003e\n      \u003ca href=\"/files/resume.pdf\" aria-label=\"Download\" download\u003e\n        \u003csvg aria-hidden=\"true\" xmlns=\"http://www.w3.org/2000/svg\" viewBox=\"0 0 18 18\"\u003e\n          \u003cpath d=\"M9 13c.3 0 .5-.1.7-.3L15.4 7 14 5.6l-4 4V1H8v8.6l-4-4L2.6 7l5.7 5.7c.2.2.4.3.7.3zm-7 2h14v2H2z\" /\u003e\n        \u003